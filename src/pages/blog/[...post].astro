---
import { marked } from "marked";
import { getCollection, getEntries } from "astro:content";
import BaseLayout from "src/layouts/BaseLayout.astro";
import FeaturedPost from "@components/FeaturedPost.astro";
import { Image } from "astro:assets";
import { formatDate } from "@js/utils";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => ({
    params: { post: post.slug },
    props: { post: post },
  }));
}

const { post } = Astro.props;
const content = await marked.parse(
  post.body.replace(/\n(?=\n)/g, "\n\n<br/>\n"),
);

const authors = await getEntries(post.data.author);
---

<BaseLayout
  title={post.data.title}
  description={post.body
    .split(" ")
    .slice(0, 20)
    .join(" ")
    .replace(/[#*_\`]/g, "")
    .replace(/\[([^\]]+)\]\([^\)]+\)/g, "$1")
    .trim() + (post.body.split(" ").length > 20 && "...")}
>
  <article id="blog-post" class="max-w-4xl mx-auto p-4 mb-20">
    {
      post.data.image && (
        <picture>
          <Image
            src={post.data.image}
            alt={post.data.imageAlt ? post.data.imageAlt : post.data.title}
            width={post.data.image.width}
            height={post.data.image.height}
            decoding="async"
          />
        </picture>
      )
    }

    <div id="blog-post-details" class="mt-8 flex flex-col gap-4">
      <h1 id={post.data.title}>{post.data.title}</h1>
      <div>
        {
          post.data.date && (
            <p>
              {formatDate(post.data.date)} by
                {authors.length === 1
                ? authors[0].data.name
                : authors.length === 2
                ? `${authors[0].data.name} and ${authors[1].data.name}`
                : authors.slice(0, -1).map((author) => author.data.name).join(", ") + 
                  `${authors.length > 2 ? "," : ""} and ${authors[authors.length - 1].data.name}`}
            </p>
          )
        }
      </div>
    </div>

    <section id="blog-post-content" class="my-8">
      <p set:html={content} />
    </section>

    <section id="blog-post-authors" class="flex flex-col gap-4">
      {
        authors.map((author) => (
          <div class="flex flex-col gap-4 max-w-xl border border-lifeBorder p-4 rounded-lg text-left">
            <span class="italic">Author</span>

            <div class="flex flex-wrap items-center gap-4">
              <img
                class="object-cover w-20 h-20 mt-3 mr-3 rounded-full"
                src={
                  typeof author.data.photo === "string"
                    ? author.data.photo.replace(
                        /^.*\/src\/assets\//,
                        "/src/assets/",
                      )
                    : author.data.photo.src.replace(
                        /^.*\/src\/assets\//,
                        "/src/assets/",
                      )
                }
                alt={author.data.name}
                decoding="async"
                loading="lazy"
              />
              <p itemprop="author" class="text-2xl font-bold">
                {author.data.name}
              </p>
            </div>

            <div>
              <p>{author.data.bio}</p>
            </div>
          </div>
        ))
      }
    </section>
  </article>
</BaseLayout>
<FeaturedPost />
